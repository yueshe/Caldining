<!DOCTYPE html>
<html>
<head>
  <title>Caldining</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <% if !(current_page?(new_session_path(User)) || current_page?(new_registration_path(User))) %>
    <%= render 'layouts/header' %>
  <% end %>
</head>
<body>

<p class="notice bg-info"><%= notice %></p>
<p class="bg-warning"><%= alert %></p>
<p class="error bg-danger"><%= flash[:error] %></p>
<%= yield %>
</body>
</html>
