<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Calories</th>
      <th>Fat</th>
      <th>Carb</th>
      <th>Cholesterol</th>
      <th>Protein</th>
      <th>Sodium</th>
      <th>Location</th>
      <th>Timeframe</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.calories %></td>
        <td><%= item.fat %></td>
        <td><%= item.carb %></td>
        <td><%= item.cholesterol %></td>
        <td><%= item.protein %></td>
        <td><%= item.sodium %></td>
        <td><%= item.location %></td>
        <td><%= item.timeframe %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

