%h1 Dining Hall: #{@hall.name}
= link_to 'Show All Items', items_path,  :class => "btn btn-default"
%br
- if current_user && current_user.admin
  %td= link_to 'Add New Item', new_item_path,  :class => "btn btn-default"
  = link_to 'All Halls', halls_path,  :class => "btn btn-default"
%br
%table#halls
  %thead
    %h3 Menu Items:
    %tr
  %tbody
    - @items.each do |item|
      %tr
        %td= link_to item.name, item_path(item)
        %td= link_to 'More nutrition info', item_path(item),  :class => "btn btn-default"
%br
